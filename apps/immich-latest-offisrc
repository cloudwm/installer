EOM

  chmod 644 /etc/motd
  echo "âœ… Custom MOTD installed at /etc/motd with Immich details." | log
}


# ==============================
# Main
# ==============================
main() {
    install_docker
    "$updateStatus" "$HTML_PATH" -ap "Installing Immich..."
    run_immich
    "$updateStatus" "$HTML_PATH" -ap "Finishing Immich installation..."
    switch_nginx_to_proxy
    obtain_ssl
    configure_motd
}

main
