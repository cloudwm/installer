#!/bin/bash

if [ -f "include/startup.sh" ]; then
    . include/startup.sh
elif [ -f "../include/startup.sh" ]; then
    . ../include/startup.sh
fi

export DEBIAN_FRONTEND=noninteractive
export NEEDRESTART_MODE=l
rootDir="$(rootDir)"

echo "Preparing production Rancher worker node" | log

swapoff -a
sed -i '/ swap / s/^\(.*\)$/#\1/g' /etc/fstab

cat >/etc/modules-load.d/k8s.conf <<EOF
overlay
br_netfilter
EOF
modprobe overlay br_netfilter 2>/dev/null || true

cat >/etc/sysctl.d/k8s.conf <<EOF
net.bridge.bridge-nf-call-iptables  = 1
net.bridge.bridge-nf-call-ip6tables = 1
net.ipv4.ip_forward                 = 1
vm.max_map_count                    = 262144
EOF
sysctl --system >/dev/null

apt update -y
apt install -y ca-certificates curl gnupg lsb-release jq iptables conntrack open-iscsi nfs-common chrony parted iptables-persistent

systemctl enable --now chrony iscsid >/dev/null 2>&1

ROOT_DISK=$(lsblk -no pkname $(findmnt -n -o SOURCE /) | tr -d ' ')

DATA_ROOT="/mnt/container-storage"
mkdir -p $DATA_ROOT/{docker,rancher,kubelet,longhorn}

curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" > /etc/apt/sources.list.d/docker.list
apt update -y
apt install -y docker-ce docker-ce-cli containerd.io >/dev/null 2>&1

cat > /etc/docker/daemon.json <<EOF
{
  "data-root": "$DATA_ROOT/docker",
  "storage-driver": "overlay2",
  "log-driver": "json-file",
  "log-opts": { "max-size": "50m", "max-file": "3" },
  "live-restore": true
}
EOF

for dir in docker kubelet rancher; do
    rm -rf /var/lib/$dir
    ln -sf $DATA_ROOT/$dir /var/lib/$dir
done

mkdir -p /var/lib/longhorn
mount --bind $DATA_ROOT/longhorn /var/lib/longhorn
echo "$DATA_ROOT/longhorn /var/lib/longhorn none bind 0 0" >> /etc/fstab

systemctl restart docker
systemctl enable docker >/dev/null 2>&1

iptables -N DOCKER-USER 2>/dev/null || true
iptables -F DOCKER-USER
iptables -A DOCKER-USER -j ACCEPT
iptables-save  > /etc/iptables/rules.v4  2>/dev/null
ip6tables-save > /etc/iptables/rules.v6 2>/dev/null
systemctl enable netfilter-persistent >/dev/null 2>&1

descriptionAppend "Rancher worker node fully prepared!"
descriptionAppend "Storage location : $DATA_ROOT"
descriptionAppend ""
descriptionAppend "Run this command manually to join the cluster:"
descriptionAppend "curl -fL https://YOUR-RANCHER-FQDN/system-agent-install.sh | sudo sh -s -- \\"
descriptionAppend "    --server https://YOUR-RANCHER-FQDN \\"
descriptionAppend "    --token YOUR-TOKEN-HERE \\"
descriptionAppend "    --worker"

tagScript success
exit 0
